<?xml version="1.0" encoding="utf-8"?>
<com.young.ownertask.ui.profile.ProfileViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:paddingLeft="2dip"
    android:paddingRight="2dip"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="9dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_profile_item_none"
            android:orientation="vertical"
            android:layout_width="8dp"
            android:layout_height="10dp" />
        <LinearLayout
            android:id="@+id/ll_profile_item_overdue"
            android:orientation="vertical"
            android:layout_width="8dp"
            android:layout_height="30dp"
            android:background="@color/rosein"/>
        <LinearLayout
            android:id="@+id/ll_profile_item_snoozed"
            android:orientation="vertical"
            android:layout_width="8dp"
            android:layout_height="50dp"
            android:background="@color/orange"/>
        <LinearLayout
            android:id="@+id/ll_profile_item_completed"
            android:orientation="vertical"
            android:layout_width="8dp"
            android:layout_height="60dp"
            android:background="@color/cyan"/>
        <TextView
            android:id="@+id/tv_profile_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:text="20"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"/>

</com.young.ownertask.ui.profile.ProfileViewItem>
