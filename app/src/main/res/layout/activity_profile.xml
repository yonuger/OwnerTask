<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <LinearLayout
        android:id="@+id/ll_list_head"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@mipmap/background_head_05">

        <include layout="@layout/view_navigation_bar"/>

        <TextView
            android:id="@+id/tv_list_title"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:textSize="30sp"
            android:textColor="@color/white_01"
            android:text="Nicole James"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_list_head"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_01"
                android:text="FEBRUARY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/gray"
                android:text="2015"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_spinner"/>


        </LinearLayout>
        <com.young.ownertask.widgets.HorizontalListView
            android:id="@+id/hlv_profile_chart"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_marginTop="10dp" >
        </com.young.ownertask.widgets.HorizontalListView>

    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="190dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:src="@mipmap/ic_more"/>-->
</RelativeLayout>
