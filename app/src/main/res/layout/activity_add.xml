<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.list.ListActivity">

    <LinearLayout
        android:id="@+id/ll_list_head"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@mipmap/background_head_04">

        <include layout="@layout/view_navigation_bar"/>

        <TextView
            android:id="@+id/tv_list_title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:textSize="32sp"
            android:textColor="@color/white_01"
            android:text="Shop"/>
    </LinearLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_add"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_below="@+id/ll_list_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right"
            android:textColor="@color/gray_01"
            android:textSize="16sp"
            android:text="Shop description"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_activity_add_margin_top"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_01"
                android:textSize="16sp"
                android:text="All Day"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_switch"
                android:layout_gravity="right"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_activity_add_margin_top"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_01"
                android:textSize="16sp"
                android:text="From"/>

            <TextView
                android:id="@+id/iv_add_from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="9:00am"/>

            <TextView
                android:id="@+id/iv_add_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_add_from_time"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="February 9, 2015"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_activity_add_margin_top"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right"
            android:layout_marginBottom="@dimen/dimen_activity_add_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_01"
                android:textSize="16sp"
                android:text="To"/>

            <TextView
                android:id="@+id/iv_add_to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="9:00am"/>

            <TextView
                android:id="@+id/iv_add_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_add_to_time"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="February 9, 2015"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_activity_add_margin_bottom"
            android:layout_marginTop="@dimen/dimen_activity_add_margin_top"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_01"
                android:textSize="16sp"
                android:text="Location"/>

            <TextView
                android:id="@+id/tv_add_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Starbucks"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/tv_add_location"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_location"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_activity_add_margin_bottom"
            android:layout_marginTop="@dimen/dimen_activity_add_margin_top"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_01"
                android:textSize="16sp"
                android:text="People"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pic_user_s_01" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pic_user_s_02" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pic_user_s_03" />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_activity_add_margin_bottom"
            android:layout_marginTop="@dimen/dimen_activity_add_margin_top"
            android:layout_marginLeft="@dimen/dimen_activity_add_margin_left"
            android:layout_marginRight="@dimen/dimen_activity_add_margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_01"
                android:textSize="16sp"
                android:text="Repeat"/>

            <TextView
                android:id="@+id/tv_add_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Monthly"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
    </LinearLayout>

</RelativeLayout>
